            <a
              href="#contact"
              class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-foreground hover:bg-muted"
            >
              Contact
            </a>
          </div>
          <!-- Removed mobile buttons section -->
        </div>
      </div>
    </div>
  </div>
</header>